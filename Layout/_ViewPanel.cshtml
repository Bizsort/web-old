@{
    Layout = "~/_Master.cshtml";
}

@section token {
@RenderSection("token", required: false)}

@section head {
@RenderSection("head", required: false)}

<table id="content" style="width:100%; margin-top:10px;">
    <tr style="vertical-align:top; height:auto;">
        <td>
            @RenderSection("context", required: false)
        </td>
    </tr>
    <tr style="vertical-align: top;">
        <td>
            <table id="itemView" class="view asyncData" style="display:none; width:100%;" itemscope itemtype="@(Page.MicrodataItemType ?? "http://schema.org/Thing")">
                <tr class="header">
                    <th colspan="2" style="vertical-align:bottom;"><h3 class="name" itemprop="name"></h3></th>
                    <td rowspan="3" id="rightFrame" class="auto" style="vertical-align:top; max-width:180px;">
                        @RenderSection("rightFrame", required: false)
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:left; vertical-align: top;">
                        <table>
                            <tr style="vertical-align: top;">
                                <td style="display:none; padding-right: 10px;" id="image"></td>
                                <td>
                                    @RenderSection("centerFrame", required: false)
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr style="vertical-align: top;">
                    <td colspan="2" id="bodyFrame" style="padding-right: 10px">
                        @RenderBody()
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>